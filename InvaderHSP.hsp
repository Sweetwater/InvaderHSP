goto *main

#include "./Define.hsp"
#include "./Player.hsp"


#deffunc initializeScreen
	screen mainWindowID, screenWidth, screenHeight
	return


#deffunc loadGame

	celload "./data/myShip.bmp", 1
	myShipImageID = stat
	celdiv myShipImageID, 32, 32, 16, 16

//	pos playerX, playerY
//	picload "./data/myShip.bmp", 1

	return

#deffunc initializeGame
	newmod player, ModPlayer, myShipImageID
	return

#deffunc updateGame
	update player
	return

#deffunc drawGame
	draw player
	return

