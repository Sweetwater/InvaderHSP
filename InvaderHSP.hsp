*main

	initializeScreen

	loadGame
	initializeGame

	repeat
//		redraw 0
		redraw 1
		color backgoundColor
		boxf 0, 0, screenWidth, screenHeight

		stick inputKey, escKey
		if inputKey & escKey {
			goto *gameEnd
		}

		updateGame
		drawGame

		redraw 1
		await FPS
	loop

*gameEnd
	end

